@model IEnumerable<SampleMVCApp.Models.Person>

@{
    ViewData["Title"] = "Find";
}

<h1>Find</h1>

<form method="post" asp-controller="People" asp-action="Find">
    <div class="row">
        <input type="text" name="Find" class="col-10 form-control" />
        <intpu type="submit" value="Find" class="col-2 btn btn-primary" />
    </div>
</form>

<table class="table mt-5">
    <thead>
        <tr>
            <th>PersonId</th>
            <th>Name</th>
            <th>Mail</th>
            <th>Age/th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
            </tr>
        }
    </tbody>
</table>